{
  "$id": "http://example.com/lb.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "load_balancer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["application", "network"]
        },
        "subnets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "security_groups": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["name", "type", "subnets"]
    },
    "listeners": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "port": {
            "type": "integer"
          },
          "protocol": {
            "type": "string",
            "enum": ["HTTP", "HTTPS"]
          },
          "default_action": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["forward", "redirect", "fixed-response"]
              },
              "target_group_arn": {
                "type": "string"
              }
            },
            "required": ["type"]
          }
        },
        "required": ["port", "protocol", "default_action"]
      }
    }
  },
  "required": ["load_balancer"]
}