{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "bucket": {
      "type": "string",
      "description": "The name of the S3 bucket."
    },
    "lifecycle": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the lifecycle rule."
              },
              "status": {
                "type": "string",
                "enum": ["Enabled", "Disabled"],
                "description": "Indicates whether the rule is enabled or disabled."
              },
              "expiration": {
                "type": "object",
                "properties": {
                  "days": {
                    "type": "integer",
                    "description": "The number of days after object creation when the object is deleted."
                  }
                },
                "required": ["days"]
              }
            },
            "required": ["id", "status", "expiration"]
          }
        }
      }
    }
  },
  "required": ["bucket"]
}